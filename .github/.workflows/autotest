name: Automated Test
on: [push]
jobs:
automated_test:
name: Automated Test
runs-on: ubuntu-latest
steps:
- uses: actions/checkout@v4
- name: Set up Python 3.10
uses: actions/setup-python@v3
with:
python-version: "3.10"
- name: Produce Test 1 Output
run: python find_lowest_number.py > test1_expected.txt
- name: Test 1
run: diff test1_input.txt test1_expected.txt
- name: Produce Test 2 Output
run: python find_lowest_number.py > test2_expected.txt
- name: Test 2
run: diff test2_input.txt test2_expected.txt
- name: Produce Test 3 Output
run: python find_lowest_number.py > test3_expected.txt
- name: Test 3
run: diff test3_input.txt test3_expected.txt
